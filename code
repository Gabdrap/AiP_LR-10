#include <iostream>
#include <Windows.h>

using namespace std;

int main()
{
    SetConsoleCP(1251);
    SetConsoleOutputCP(1251);
    int choise;
    cout << "1" "\n";
    cout << "2" "\n";
    cout << "Выберите задание" "\n";
    cin >> choise;

    if (choise == 1)
    {
        long a;
        short b;
        cout << "Ведите значения для a и b: ";
        cin >> a >> b;
        int sum = a + b;
        cout << sum;
        return 0;
    }
    if (choise == 2)
    {
        return 0;
    }
    return 0;
}
